
<h1 class="label-font">My Dreams</h1>


<br>

<%= link_to 'New Entry', new_entry_path, class:"btn btn-secondary" %>

<br> 

<style>
.myclass {
  background-color: #FFFFFF;
  padding-top: 10px;
  padding-bottom: 10px;
  margin-top: 20px;
  margin-bottom: 20px;
}


body{
  font-family: 'Nunito', sans-serif;
  padding: 5px;
}
.card{
  border-radius: 4px;
  background: #fff;
  box-shadow: 0 6px 3px rgba(0,0,0,.08), 0 0 6px rgba(0,0,0,.05);
  transition: .3s transform cubic-bezier(.155,1.105,.295,1.12),.3s box-shadow,.3s -webkit-transform cubic-bezier(.155,1.105,.295,1.12);
  
  cursor: pointer;
  max-height: 30px;
  max-width: 180px;
  background-color: #e1d3f0;



}

.card:hover{
  transform: scale(1.05);
  box-shadow: 0 8px 8px rgba(0,0,0,.12), 0 4px 8px rgba(0,0,0,.06);
}

.card h3{
  font-size: 10px;
}

.card h5 {
  padding-top: -10px;
  
  font-size: 20px;
}



div.calendarCell{
  height: 200px;
  border-radius: 25px;
  border: 2px solid #dfcaeb;


}

h5.dateHeader{
  font-size: 15px;
  color: #A058BF;
  text-align: center;

}

div.dateText{
  padding-top: 10px;
  font-color: #000000;

}

div.housecard{
  padding-bottom: 8px;
  padding-left: 20px;
  padding-right: 20px;
}


a.fill-div {
    display: block;
    height: 100%;
    width: 100%;
    text-decoration: none;
}
    
</style>

<div class="myclass">

<div class="container">
<%= month_calendar(attribute: :created_at, events: @entries) do |date, entries| %>
  <div class="calendarCell">
    <div class="dateText">
      <h5 class="dateHeader">  <strong><%= date %> </strong></h5>
    </div>
   
  
    <% counter = 0 %>
    <% entries.each do |entry| %>
      <% if entry.user == current_user && counter < 4%>
        <div class="housecard">
          <div class="card">

              <h5> <%= entry.title[0, 15] %>      <%= link_to image_tag('eye.png', alt: "View Dream"), entry %>  </h5>
            
          </div>
        </div>
      <% end %>
      <% counter += 1 %>
    <% end %>
  </div>
<% end %>

</div>

</div>
