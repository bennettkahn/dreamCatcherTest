
<h1 class="label-font">My Dreams</h1>

<table class="table table-striped table-light table-font rounded">
  <thead class="thead-dark">
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Created at...</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody">
    <% @entries.each do |entry| %>
      <% if entry.user == current_user %>
        <tr>
          <td><%= entry.title %></td>
          <td><%= entry.description %></td>
          <td><%= entry.created_at.strftime("%d %b %y") %></td>

          <td><%= link_to image_tag('eye.png'), entry %></td>
          <td><%= link_to image_tag('edit.png'), edit_entry_path(entry) %></td>
          <td><%= link_to image_tag('trashcan.png'), entry, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Entry', new_entry_path, class:"btn btn-secondary" %>
