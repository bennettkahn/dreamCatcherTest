
<h1 class="label-font">Explore</h1>

<table class="table table-striped table-light table-font rounded">
  <thead class="thead-dark">
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Created at...</th>
      <th>Author</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @entries.each do |entry| %>
      <tr>
        <td><%= entry.title %></td>
        <td><%= entry.description %></td>
        <td><%= entry.created_at.strftime("%d %b %y") %></td>
        <td><%= entry.get_name %></td>
        <td><%= link_to image_tag('eye.png'), entry %></td>
      </tr>
    <% end %>
  </tbody>
</table>

