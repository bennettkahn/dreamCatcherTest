
<h1 class="label-font">Explore</h1>

<table class="table table-striped table-light table-font rounded">
  <thead class="thead-dark">
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Date</th>
      <% if user_signed_in? %>
        <th>By...</th>
      <% end %>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @entries.each do |entry| %>
      <% if entry.user != current_user and entry.is_private == false %>
        <tr>
          <td style="width: 20%"><%= entry.title %></td>
          <td><%= entry.description %></td>
          <td style = "width: 10%"><%= entry.created_at.strftime("%d %b %y") %></td>
          <% if user_signed_in? %>
            <% if entry.is_anon == false %>
              <td><%= entry.get_name.split(/@/, 2).first %></td>
            <% else %>
              <td>Anonymous</td>
            <% end %>
          <% end %>
          <td><%= link_to image_tag('eye.png'), entry %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>
