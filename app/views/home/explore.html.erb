
<h1 class="label-font">Explore</h1>

<table class="table table-striped table-light table-font rounded">
  <thead class="thead-dark">
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Date</th>
      <th>By...</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @entries.each do |entry| %>
      <% if entry.user != current_user %>
        <tr>
          <td><%= entry.title %></td>
          <td><%= entry.description %></td>
          <td><%= entry.created_at.strftime("%d %b %y") %></td>
          <% if user_signed_in? %>
            <td><%= entry.get_name.split(/@/, 2).first %></td>
          <% else %>
            <td>Anonymous</td>
          <% end %>
          <td><%= link_to image_tag('eye.png'), entry %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>
